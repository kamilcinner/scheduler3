{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rennic/core": ["libs/core/src/index.ts"],
      "@rennic/shared": ["libs/shared/src/index.ts"],
      "@rennic/shared/styles": ["libs/shared/styles/index.scss"],
      "@rennic/shared/enums": ["libs/shared/enums/src/index.ts"],
      "@rennic/shared/models": ["libs/shared/models/src/index.ts"],
      "@rennic/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@rennic/shared/services": ["libs/shared/services/src/index.ts"],
      "@rennic/shared/material": ["libs/shared/material/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
